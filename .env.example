# MEV Dashboard Environment Configuration
# Copy this file to .env and update with your actual values

# Django Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database Configuration
# For PostgreSQL (recommended for production)
DATABASE_URL=postgresql://mev_user:mev_password@localhost:5432/mev_dashboard

# For SQLite (development only - limited JSONField support)
# DATABASE_URL=sqlite:///db.sqlite3

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Blockchain Configuration
WEB3_PROVIDER_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
ETHEREUM_NETWORK=mainnet

# ML Configuration
ML_MODEL_PATH=models/
TRAINING_DATA_PATH=data/training/
MODEL_CHECKPOINT_DIR=models/checkpoints/

# API Configuration
API_RATE_LIMIT=1000/hour
WEBHOOK_TIMEOUT=30

# Monitoring Configuration
PROMETHEUS_METRICS_ENABLED=True
HEALTH_CHECK_INTERVAL=60

# Email Configuration (for alerts)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/mev_dashboard.log

# Security
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# External Services
# Add your API keys for external services here
INFURA_PROJECT_ID=your-infura-project-id
ETHERSCAN_API_KEY=your-etherscan-api-key
