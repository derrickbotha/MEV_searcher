{
  "name": "mev-searcher-bot",
  "version": "1.0.0",
  "description": "High-performance MEV Searcher with Real-Time Event Subscriptions",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run build:cpp && tsc",
    "build:cpp": "cmake-js compile --out build",
    "build:cpp:release": "cmake-js compile --out build --config Release",
    "benchmark:cpp": "cd cpp/build && ./mev_benchmark",
    "dev": "ts-node src/index.ts",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:performance": "jest tests/performance",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "start": "node dist/index.js",
    "docker:build": "docker build -t mev-searcher:latest .",
    "docker:build:debug": "docker build -t mev-searcher:debug --target debug .",
    "docker:run": "docker run -p 8080:8080 -p 9090:9090 mev-searcher:latest",
    "docker:compose": "docker-compose up -d",
    "docker:compose:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:compose:down": "docker-compose -f docker-compose.prod.yml down",
    "docker:compose:logs": "docker-compose -f docker-compose.prod.yml logs -f",
    "prod:build": "docker build -t mev-searcher:latest --target production .",
    "prod:deploy": "npm run prod:build && npm run docker:compose:prod",
    "prod:stop": "npm run docker:compose:down",
    "prod:logs": "npm run docker:compose:logs",
    "prod:health": "curl -f http://localhost:8080/health",
    "prod:metrics": "curl -f http://localhost:9090/metrics",
    "security:scan": "docker run --rm -v \"$(pwd):/scan\" aquasec/trivy filesystem /scan",
    "security:audit": "npm audit --audit-level high",
    "benchmark:full": "npm run benchmark:cpp && npm run test:perf",
    "solana:airdrop": "solana airdrop 1",
    "solana:balance": "solana balance"
  },
  "keywords": [
    "mev",
    "jito",
    "solana",
    "searcher",
    "arbitrage"
  ],
  "author": "MEV Research Team",
  "license": "MIT",
  "dependencies": {
    "@solana/web3.js": "^1.87.6",
    "@solana/spl-token": "^0.3.8",
    "@jup-ag/api": "^6.0.6",
    "@raydium-io/raydium-sdk": "^1.3.1-beta.58",
    "@orca-so/whirlpools": "^4.0.0",
    "jito-ts": "^4.2.1",
    "ws": "^8.14.2",
    "dotenv": "^16.3.1",
    "pino": "^8.16.2",
    "pino-pretty": "^10.2.3",
    "prom-client": "^15.1.0",
    "express": "^4.18.2",
    "axios": "^1.6.2",
    "async-retry": "^1.3.3",
    "bn.js": "^5.2.1",
    "class-validator": "^0.14.0",
    "class-transformer": "^0.5.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/jest": "^29.5.8",
    "@types/ws": "^8.5.9",
    "@types/express": "^4.17.21",
    "@types/async-retry": "^1.4.8",
    "@types/bn.js": "^5.1.5",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2",
    "cmake-js": "^7.2.1",
    "node-addon-api": "^7.0.0",
    "node-gyp": "^10.0.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
